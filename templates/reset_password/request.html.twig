{% extends 'base.html.twig' %}

{% block title %}Réinitialsation du mot de passe{% endblock %}

{% block stylesheets %}
    <style>
        body{
            background-image: url({{ asset('assets/img/eau.jpg') }});
            background-size: cover;
        }
    </style>
{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Réinitialiser le mot de passe</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer<i class="fa-solid fa-paper-plane"></i></button>
    {{ form_end(requestForm) }}
{% endblock %}
